@model IEnumerable<RTSafe.RTDP.Permission.Models.Role>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RoleId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RoleId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RoleId }) |
                @Html.ActionLink("权限分配", "RoleOperation", new { roleId = item.RoleId })
                
            </td>
        </tr>
    }

</table>
